<style>
	main {
		margin: auto;
		/* padding: 1rem; */
		/* width: 800px; */
		/* max-width: calc(100% - 2rem); */
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	.link-card-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		/* grid-row-gap: 10vh; */
		gap: 2rem;
		padding: 1rem;
	}

	@media screen and (max-width: 768px) {
		.link-card-grid {
			grid-template-columns: 1fr;
			justify-items: center;
		}
	}

	iframe {
		width: 100%;
		max-width: 560px;
		height: auto;
		aspect-ratio: 16 / 9;
	}

	@media screen and (max-width: 768px) {
		iframe {
			max-width: 100%;
		}
	}

	.local_div {
		background-color: black;
		/* background-image: url("/assets/remodeling_sketch1.png"); */
		opacity: 0.8;
		display: flex;
		/* align-items: center; */
		justify-content: center;
		padding: 2rem;
		margin: 6rem 0 0 0;
	}

	.local_h1 {
		font-size: 3rem;
		font-weight: 600;
		line-height: 1;
		/* text-align: center; */
		margin-bottom: 1em;
	}

	.local_h2 {
		font-size: 2rem;
		font-weight: 600;
		line-height: 1;
		/* text-align: center; */
		margin-bottom: 1em;
	}

	.service_circles {
		position: relative;
		/* max-width: 900px; */
		min-height: 500px;
		margin: auto;
		display: flex;
		justify-content: space-around;
		align-items: center;
    }

	.circle_box {
		width: 300px;
		height: 400px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		/* border: 1px solid black; */
		/* border-radius: 50%; */
		/* overflow: hidden; */
		position: relative;
	}

	.circle {
		border-radius: 50%;
		width: 200px;
		height: 200px;
		overflow: hidden;
		position: relative;
    }

	.sat_guar {
		max-width: 265px;
		height: auto;
		display: block;
	}

	.circle img {
		max-width: 300px;
		height: auto;
		display: block;
    }

    .circle_overlay {
		bottom: 10px;
		/* background: rgba(255, 255, 255, 0.5); */
		color: black;
		padding: 10px;
		text-align: center;
    }

	.circle_button {
		display: inline-block;
		padding: 8px 16px;
		margin-top: 8px;
		background-color: rgb(120, 50, 146);
		color: white;
		text-decoration: none;
		border-radius: 5px;
		transition: background-color 0.3s ease;
    }

    .circle_button:hover {
    	background-color: rgb(90, 40, 116);
    }

    .plans {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('/assets/remodeling_sketch1.png') no-repeat center;
		background-size: cover;
		z-index: -1;
		opacity: 0.3;
    }

	.team {
		margin: 10rem 0 0 0;
		padding: 2rem;
		color: black;
	}

	.team_h2 {
		font-size: 3rem;
		font-weight: 600;
		line-height: 1;
		margin-bottom: 1em;
	}
</style>
